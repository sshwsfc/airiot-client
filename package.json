{
  "name": "@airiot/client",
  "version": "1.0.7",
  "description": "airiot client lib",
  "type": "module",
  "main": "./dist/airiot-client.umd.js",
  "module": "./dist/airiot-client.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/airiot-client.umd.js",
      "import": "./dist/airiot-client.es.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^22.0.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "happy-dom": "^20.1.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "typescript": "^5.6.0",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^4.5.4",
    "vitepress": "^1.0.0",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "jotai": "^2.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router": "^7.12.0",
    "react-router-dom": "^7.12.0"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "react-hook-form": "^7.71.1",
    "zod": "^4.3.6"
  }
}
